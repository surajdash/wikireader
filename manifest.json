{
  "manifest_version": 3,
  "name": "WikiReader",
  "version": "0.1.0",
  "description": "A privacy-first Wikiwand-like reader for Wikipedia.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webNavigation",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "reader.html",
        "assets/*",
        "styles/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
